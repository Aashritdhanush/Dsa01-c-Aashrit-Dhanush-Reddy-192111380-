#include <iostream>
using namespace std;
double celsiusToFahrenheit(double celsius) {
    return (celsius * 9/5) + 32;
}

double fahrenheitToCelsius(double fahrenheit) {
    return (fahrenheit - 32) * 5/9;
}

int main() {
    double celsiusTemperature = 25;
    double convertedToFahrenheit = celsiusToFahrenheit(celsiusTemperature);

    cout << celsiusTemperature << " degrees Celsius is equal to " << convertedToFahrenheit << " degrees Fahrenheit." << std::endl;

    double fahrenheitTemperature = 77;
    double convertedToCelsius = fahrenheitToCelsius(fahrenheitTemperature);

    cout << fahrenheitTemperature << " degrees Fahrenheit is equal to " << convertedToCelsius << " degrees Celsius." << std::endl;

    return 0;
}
